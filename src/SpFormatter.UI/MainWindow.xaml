<Window x:Class="SpFormatter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpFormatter.UI"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="SourcePawn Formatter - Real-time Testing" Height="700" Width="1200"
        MinHeight="600" MinWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="SourcePawn Formatter" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Grid.Column="1" Text="Ready" Foreground="LightGray" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input Panel -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Source Code (Input)" FontWeight="Bold" Margin="0,0,0,5"/>
                <avalonEdit:TextEditor x:Name="InputEditor" Grid.Row="1"
                                     FontFamily="Consolas" FontSize="12"
                                     Background="White" Foreground="Black"
                                     ShowLineNumbers="True"
                                     LineNumbersForeground="#666666"
                                     WordWrap="False"/>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Output Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Formatted Code (Output)" FontWeight="Bold" Margin="0,0,0,5"/>
                <avalonEdit:TextEditor x:Name="OutputEditor" Grid.Row="1"
                                     FontFamily="Consolas" FontSize="12"
                                     Background="White" Foreground="Black"
                                     IsReadOnly="True"
                                     ShowLineNumbers="True"
                                     LineNumbersForeground="#666666"
                                     WordWrap="False"/>
            </Grid>
        </Grid>

        <!-- Options Panel -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <Expander Header="Formatting Options" IsExpanded="True" Margin="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First Row: Core Options -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Indentation Options -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Indentation" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Size:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox x:Name="IndentSizeTextBox" Grid.Column="1" Text="4" Width="50" HorizontalAlignment="Left" TextChanged="OptionsChanged"/>
                                </Grid>
                                
                                <CheckBox x:Name="UseSpacesCheckBox" Content="Use spaces (instead of tabs)" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="IndentPreprocessorCheckBox" Content="Indent preprocessor directives" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                            </StackPanel>
                            
                            <!-- Spacing Options -->
                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="Spacing" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="SpaceAfterCommaCheckBox" Content="Space after comma" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="SpaceAroundOperatorsCheckBox" Content="Space around operators" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="SpaceBeforeOpenParenCheckBox" Content="Space before opening paren" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="SpaceAfterSemicolonCheckBox" Content="Space after semicolon" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="SpaceInArrayBracketsCheckBox" Content="Space in array brackets" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                            </StackPanel>
                            
                            <!-- Line Break Options -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Line Breaks" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="NewLineAfterOpenBraceCheckBox" Content="New line after opening brace" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="NewLineBeforeCloseBraceCheckBox" Content="New line before closing brace" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="NewLineAfterSemicolonCheckBox" Content="New line after semicolon" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="NewLineAfterIncludeCheckBox" Content="New line after include" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Max line length:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox x:Name="MaxLineLengthTextBox" Grid.Column="1" Text="120" Width="60" HorizontalAlignment="Left" TextChanged="OptionsChanged"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Second Row: Advanced Options -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Empty Line Management -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Empty Lines" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="PreserveEmptyLinesCheckBox" Content="Preserve empty lines" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Max consecutive:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox x:Name="MaxConsecutiveEmptyLinesTextBox" Grid.Column="1" Text="2" Width="40" HorizontalAlignment="Left" TextChanged="OptionsChanged"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Alignment Options -->
                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="Alignment" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="AlignConsecutiveAssignmentsCheckBox" Content="Align consecutive assignments" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="AlignConsecutiveDeclarationsCheckBox" Content="Align consecutive declarations" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                            </StackPanel>
                            
                            <!-- SourcePawn Specific -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="SourcePawn Specific" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="SortIncludesCheckBox" Content="Sort includes" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="CompactFunctionParametersCheckBox" Content="Compact function parameters" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="RequireSemicolonsCheckBox" Content="Require semicolons" IsChecked="True" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                <CheckBox x:Name="RemoveOptionalSemicolonsCheckBox" Content="Remove optional semicolons" IsChecked="False" Margin="0,3" Checked="OptionsChanged" Unchecked="OptionsChanged"/>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Line ending:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox x:Name="LineEndingComboBox" Grid.Column="1" Width="80" HorizontalAlignment="Left" SelectionChanged="OptionsChanged">
                                        <ComboBoxItem Content="LF (\n)" IsSelected="True"/>
                                        <ComboBoxItem Content="CRLF (\r\n)"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Expander>
        </Border>
    </Grid>
</Window>
